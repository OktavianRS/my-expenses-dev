header.bp-header.cf
    .dummy-logo
        #pagePreloader(style="position: absolute; background: none; -webkit-filter: blur(0px);")
                span#spinner(style=" width: 100px; height: 100px; margin: -50px 0 0 -50px;")
        i.uk-icon-star(style="font-size:75px; cursor: pointer;")
.container#myDiv
    button.action.action--open(aria-label="Open Menu")
        span.icon.icon--menu
    nav(id="ml-menu", class="menu")
        button(class="action action--close", aria-label="Close Menu")
            span.icon.icon--cross
        .menu__wrap
            ul(data-menu="main", class="menu__level")
                li.menu__item( ng-repeat="categorie in categories")
                    a(class="menu__link", href="#", data-submenu="submenu-{{categorie._id}}") {{categorie.categorieName}}
            ul(data-menu="submenu-{{subCategorie.category_id}}", class="menu__level", ng-repeat="subCategorie in subCategories")
                li.menu__item(ng-repeat="subCategorie in subCategories")
                    a(class="menu__link", href="#", data-submenu="submenu-{{subCategorie._id}}") {{subCategorie.subCategorieName}}
                    
            ul(data-menu="submenu-{{itemCategorie.subCategorie_id}}", class="menu__level", ng-repeat="itemCategorie in itemCategories")
                li.menu__item(ng-repeat="itemCategorie in itemCategories")
                    a(class="menu__link", href="#") {{itemCategorie.itemCategorieName}}        
    .content
        form.uk-form(style="position: absolute;top: 100%;left: 0;right: 0;", action="/new_expense", method="post")
            .uk-panel.uk-panel-box.uk-panel-box-primary.uk-width-1-2.uk-container-center.uk-text-center(style="margin-top: -91px;")
                input(type="text", data-uk-datepicker="{format: 'dd.mm.yyyy}", name="date").uk-container-center#date.uk-width-1-1
                p(style="padding: 0;", name="category").info Select category
                input(placeholder="What ?" name="what").uk-width-1-1.uk-margin-bottom
                label.uk-form-label Price
                input(name="dollar",type="number", min="0", placeholder="$").uk-form-width-mini.uk-form-small.uk-margin-left
                input(name="cent",type="number", max="100", min="0", placeholder="Â¢").uk-form-width-mini.uk-form-small.uk-margin-left
                button(type="submit").uk-button.uk-button-primary.uk-width-1-1.uk-margin-top ok
    
